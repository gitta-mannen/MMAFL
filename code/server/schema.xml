<?xml version="1.0">
<database name="stats">
	<type>sqlite</type>
	<location>/stats.db</location>
	<table name="events">
		<column name="id">
			<dbname>id</dbname>
			<dbtype>primarykey</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="name">
			<dbname>name</dbname>
			<dbtype>text</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="date">
			<dbname>date</dbname>
			<dbtype>text</dbtype>
			<apptype>date</apptype>
			<formatter>textdate</formatter>
		</column>
		<column name="location">
			<dbname>location</dbname>
			<dbtype>text</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="organization">
			<dbname>organization</dbname>
			<dbtype>string</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="attendance">
			<dbname>attandance</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<formatter>thousand</formatter>
		</column>
	</table>
	<table name="fighters">
		<column name="id">
			<dbname>id</dbname>
			<dbtype>primarykey</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="name">
			<dbname>name</dbname>
			<dbtype>text</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="nickname">
			<dbname>nickname</dbname>
			<dbtype>text</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="height">
			<dbname>height</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>cm</unit>
			<formatter>height</formatter>
		</column>
		<column name="weight">
			<dbname>weight</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>kg</unit>
			<formatter>weight</formatter>
		</column>
		<column name="reach">
			<dbname>reach</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>cm</unit>
			<formatter>reach</formatter>
		</column>
		<column name="stance">
			<dbname>stance</dbname>
			<dbtype>text</dbtype>
			<apptype>string</apptype>
		</column>
		<column name="age">
			<dbname>age</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="strikes landed">
			<dbname>slpm</dbname>
			<dbtype>real</dbtype>
			<apptype>double</apptype>
			<formatter>localenumbers</formatter>
		</column>
		<column name="striking accuracy">
			<dbname>str_acc</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>%</unit>
			<formatter>percent</formatter>
		</column>
		<column name="strikes absorbed">
			<dbname>sapm</dbname>
			<dbtype>real</dbtype>
			<apptype>double</apptype>
			<formatter>localenumbers</formatter>
		</column>
		<column name="strike defence">
			<dbname>str_def</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>%</unit>
			<formatter>percent</formatter>
		</column>
		<column name="avarage takedowns">
			<dbname>td_avg</dbname>
			<dbtype>real</dbtype>
			<apptype>double</apptype>
			<formatter>localenumbers</formatter>
		</column>
		<column name="takedown accuracy">
			<dbname>td_acc</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>%</unit>
			<formatter>percent</formatter>
		</column>
		<column name="takedown defence">
			<dbname>td_def</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
			<unit>%</unit>
			<formatter>percent</formatter>
		</column>
		<column name="avarage submissions">
			<dbname>sub_avg</dbname>
			<dbtype>real</dbtype>
			<apptype>double</apptype>
			<formatter>localenumbers</formatter>
		</column>
		<column name="wins">
			<dbname>wins</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="losses">
			<dbname>losses</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="draws">
			<dbname>draws</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
		</column>
		<column name="no contest">
			<dbname>nc</dbname>
			<dbtype>integer</dbtype>
			<apptype>integer</apptype>
		</column>
	</table>
</litedb>