				<attr name="dbtype">integer</attr>
				<attr name="apptype">integer</attr>
			</column>
			<column name="strikes landed">
				<attr name="dbname">slpm</attr>
				<attr name="dbtype">real</attr>
				<attr name="apptype">double</attr>
				<attr name="formatter">localenumbers</attr>
			</column>
			<column name="striking accuracy">
				<attr name="dbname">str_acc</attr>
