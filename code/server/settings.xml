<settings>
	<database name="stats">
		<type>sqlite</type>
		<location>/stats.db</location>
		<table name="events">
			<column name="id">
				<attr name="dbname">id</attr>
				<attr name="dbtype">primarykey</attr>
				<attr name="apptype">integer</attr>
			</column>
			<column name="name">
				<attr name="dbname">name</attr>
				<attr name="dbtype">text</attr>
				<attr name="apptype">string</attr>
			</column>
			<column name="date">
				<attr name="dbname">date</attr>
				<attr name="dbtype">text</attr>
				<attr name="apptype">date</attr>
				<attr name="formatter">textdate</attr>
			</column>
			<column name="location">
				<attr name="dbname">location</attr>
				<attr name="dbtype">text</attr>
				<attr name="apptype">string</attr>
			</column>
			<column name="organization">
				<attr name="dbname">organization</attr>
				<attr name="dbtype">string</attr>
				<attr name="apptype">string</attr>
			</column>
			<column name="attendance">
				<attr name="dbname">attandance</attr>
				<attr name="dbtype">integer</attr>
				<attr name="apptype">integer</attr>
				<attr name="formatter">thousand</attr>
			</column>
		</table>
		<table name="fighters">
			<column name="id">
				<attr name="dbname">id</attr>
				<attr name="dbtype">primarykey</attr>
				<attr name="apptype">integer</attr>
			</column>
			<column name="name">
				<attr name="dbname">name</attr>
				<attr name="dbtype">text</attr>
				<attr name="apptype">string</attr>
			</column>
			<column name="nickname">
				<attr name="dbname">nickname</attr>
				<attr name="dbtype">text</attr>
				<attr name="apptype">string</attr>
			</column>
			<column name="height">
				<attr name="dbname">height</attr>
				<attr name="dbtype">integer</attr>
				<attr name="apptype">integer</attr>
				<attr name="unit">cm</attr>
				<attr name="formatter">height</attr>
			</column>
			<column name="weight">
				<attr name="dbname">weight</attr>
				<attr name="dbtype">integer</attr>
				<attr name="apptype">integer</attr>
				<attr name="unit">kg</attr>
				<attr name="formatter">weight</attr>
